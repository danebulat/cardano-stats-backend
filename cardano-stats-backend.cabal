extra-source-files: CHANGELOG.md

executable cardano-stats-backend
    main-is:          Main.hs
    other-modules:
    other-extensions:
    build-depends:    base ^>=4.14.3.0
                    , cardano-stats-backend
    hs-source-dirs:   app
    default-language: Haskell2010

library
    hs-source-dirs:   src
    exposed-modules:
    other-modules:    Server
    build-depends:    base ^>=4.14.3.0
                    , hedis
                    , utf8-string
                    , aeson
                    , attoparsec
                    , base-compat
                    , bytestring
                    , containers
                    , directory
                    , http-api-data
                    , http-client
                    , http-media
                    , http-types
                    , mtl
                    , string-conversions
                    , text
                    , transformers
                    , wai
                    , wai-cors
                    , warp

    -- Servant dependencies
    build-depends:    servant-server

    default-language: Haskell2010

test-suite the-tests
    type:             exitcode-stdio-1.0
    hs-source-dirs:   test, src
    main-is:          tests.hs
    other-modules:
    ghc-options:
    build-depends:    base ^>=4.14.3.0
                    , bytestring
                    , QuickCheck
                    , quickcheck-instances
                    , hedis
                    , utf8-string
    default-language: Haskell2010
